<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/trackNameItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tool:text="Paris"/>

    <TextView
        android:id="@+id/usernameItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trackNameItemTextView"
        tool:text="Agredada por Noob"/>

    <TextView
        android:id="@+id/interpreterItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/trackNameItemTextView"
        android:layout_toRightOf="@id/trackNameItemTextView"
        android:layout_alignBaseline="@id/trackNameItemTextView"
        tool:text="por Deadmau5"/>

    <RatingBar
        android:id="@+id/ratingItemBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        style="?android:attr/ratingBarStyleSmall"/>
</RelativeLayout>